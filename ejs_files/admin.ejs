<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial- scale=1.0">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <!-- about.css -->
  <link rel="stylesheet" href="css/home.css">
    <title>Perfect View | <%=page_name%></title>
</head>
<body style="background-color: black;">
    
    <%- include('./partials/admin_nav.ejs'); %>
    <div class="admin_portal_container">
          <pre style="margin: auto;"><b>A D M I N   P O R T A L</b></pre>
    </div>
    <div class="user_table_container_header">
        <div class="row">
          <div class="col-3">
            <b class="p_class" >id</b>
          </div>
          <div class="col-3">
            <b class="p_class" >Username</b>
          </div>
          <div class="col-3">
            <b class="p_class" >Email</b>
            </div>
            <div class="col-3">
                <b class="p_class" >phone</b>
                </div>
    </div>
    </div>
    <% if(data.length>0) { %>
    <div class="user_table_container">
        <%data.forEach(user=>{%>  
        <div class="row user_table_row">
            
          <div class="col-3 user_table_col">
            <p class="p_class" ><%= user._id %></p>
          </div>
          <div class="col-3 user_table_col">
            <p class="p_class" ><%= user.username%></p>
          </div>
          <div class="col-3 user_table_col">
            <p class="p_class" ><%= user.email %></p>
            </div>
            <div class="col-3 user_table_col">
                <p class="p_class" ><%= user.phoneno%></p>
                </div>
            </div>   
          <% }) %>
   
    <% } else { %>
        <div >
            <div class="row">
              <div class="col">
                <b class="p_class" >empty</b>
              </div>
              <div class="col">
                <b class="p_class" >empty</b>
              </div>
              <div class="col">
                <b class="p_class" >empty</b>
                </div>
                <div class="col">
                 <b class="p_class" >empty</b>
             </div>
        </div>
        </div>
        
        <% } %>
    </div>


  



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>